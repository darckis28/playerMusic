---
import cover1 from "../assets/images/cover-1.png";
import audio1 from "../assets/audio/powder.mp3";
---

<section class="p-5 bg-cardground/60 backdrop-blur-lg max-w-80 rounded-2xl">
  <img
    src={cover1.src}
    alt="dadasasd"
    class="rounded-2xl"
  />
  <h1 class="mt-2 mb-1 text-center">Lost in the City Lights</h1>
  <p class="text-center text-xs text-grayOne">Cosmo Sheldrake</p>
  <div class="flex justify-between">
    <span class="text-xs text-grayOne">02:23</span>
    <span class="text-xs text-grayOne">03:15</span>
  </div>
  <input
    type="range"
    min="0"
    max="100"
    value="50"
    class="w-full range"
  />
  <!-- <audio
    src={audio1}
    controls
    autoplay
  ></audio> -->
</section>
